{% extends "basefront.html.twig" %}

{% block body %}
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->
    <!-- team section -->
    <div class="mt-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3> O U R  <span class="orange-text">E V E N T S</span></h3>
                        
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    {% for evenement in evenements %}
                        <div class="col-lg-4 col-md-6 mb-4">
                         
                            <div class="card">
                            <img src="{{ asset('assets/img/evenements/' ~ evenement.imageEv) }}"" style="max-width: 200px; max-height: 200px;">
                               
                                <div class="card-body">
                                    
                                    <p class="card-text"><strong>Nom : </strong>{{ evenement.nomEv }} </p>
                                    <p class="card-text"><strong>Type  :</strong> {{ evenement.typeEv }}</p>
                                    <p class="card-text"><strong>Date  : </strong>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</p>
                                    <p class="card-text"><strong>Description  :</strong> {{ evenement.descriptionEv }}</p>
                                    
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
               
            </div>
        </div>
    </div>
{% endblock %}
